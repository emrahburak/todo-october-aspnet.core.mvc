<section class="mb-6">
    <div class="max-w-screen-md mx-auto">
        @using (Html.BeginForm("Create", "Todo", FormMethod.Post))
        {
            <div class="mt-3 text-red-500"></div>
            <div class="flex justify-center rounded shadow">
                <input type="text" name="title" class="w-full px-4 py-2 rounded-l outline-none" autofocus />
                <span class="border" border-red-500></span>
                <input type="submit" value="Create" class="px-4 py-2 text-white bg-purple-500 rounded-l" />
            </div>
        }
    </div>
</section>
